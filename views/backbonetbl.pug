extends layout

block content
	section(class='container-fluid backbone-section-header')
		div(class='row')
			p Description of the template
	section(class='container backbone-section-srt-table')
		div(class='row')
			div(class='col-md-12' id='backbone-srt-table')
				div(class='wrapper')
	
	//- Templates written in Underscore templating

	script(id='person-table' type='text/template')
		div(class='col-md-8')
			div(class='row')
				div(class='col-md-12')
					label(for='taskSorting') Search:
					input(type='text' id='taskSorting' name='taskSorting')
			table(class='table')
				thead
					tr
						th(column='id')
							div Id
					tr
						th(column='first_name')
							div FirstName
					tr
						th(column='last_name')
							div LastName
					tr
						th(column='email')
							div Email
					tr
						th(column='Delete')
							div Delete
				tbody
		div(class='col-md-4')
			form(class='input-form')
				input(type="text" name="firstname" placeholder="First Name")
				input(type="text" name="lastname" placeholder="Last Name")
				input(type="email" name="email" placeholder="Email")
				a(class="btn btn-info" id="inputrow") Send
	
	script(id="person-row" type="text/template")
		td
			div &lt;%= id %&gt;
		td
			div &lt;%= first_name %&gt;
		td
			div &lt;%= last_name %&gt;
		td
			div &lt;%= email %&gt;
		td
			div X


	script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.0.0-beta1/jquery.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/backbone.js/1.3.3/backbone.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.js")
	script(type="text/javascript" src="/javascripts/backbonetbl/lib/users.js")


